<div class="container">
  <div class="articles">
    <h1><%= @article.title %></h1>
    <p><%= @article.content %></p>
    <%= link_to "edit", edit_article_path, :class => "btn btn-warning btn-edit" %>
    <%= link_to "delete", article_path(@article), :class => "btn btn-danger btn-edit", method: :delete, data: { confirm: "Are you sure you want to delete this article?" } %>
  </div>
</div>
