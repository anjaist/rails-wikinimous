<%= form_for @article do |x| %>
  <div class="form-group">
    <%= x.label :title %>
    <%= x.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= x.label :content %>
    <%= x.text_field :content, class: 'form-control' %>
  </div>
  <%= x.submit class: 'btn btn-warning' %>
<% end %>
